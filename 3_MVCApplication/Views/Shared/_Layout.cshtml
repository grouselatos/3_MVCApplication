<!DOCTYPE html>
<!--the LAYOUT will be the same for all the individual pages of the web app-->
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WatchApp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" }) <!--omoiws me to paradeigma parakatw me extra attributes kai me anonymous object sto telos-->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Actors", "Index", "Actors", new { area = "" }, new { @class = "nav-link", id = "first-link" })  <!--"Ti deixnei sto xrhsth", "se poio action phgainei", "poianou controller"-->
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Directors", "Index", "Directors", null, new { @class = "nav-link", id = "second-link" }) <!--omoiws me parapanw--> <!--null is same like {area... } from above-->
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Categories", "Index", "Categories", null, new { @class = "nav-link", id = "third-link" }) <!--omoiws me parapanw--> <!--null is same like {area... } from above-->
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Movies", "Index", "Movies", null, new { @class = "nav-link", id = "fourth-link" }) <!--omoiws me parapanw--> <!--null is same like {area... } from above-->
                </li>
            </ul>
            <button type="button" class="btn btn-primary">
                Actions <span class="badge badge-light">@Session["Actions"]</span>
            </button>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody() <!-- this function is what will take a respective .cshtml file from the Views folder and subfolders and load/render it, works like a section of the page-->
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p> <!--function that gives current datetime -->
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery") <!--to folder dhmiourgeitai mesw tou BundleConfig-->
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false) <!--by default einai true, an den yparxei to view kai meinei true tha vgalei error -->
</body>
</html>
